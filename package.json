{
  "name": "gboy-ts",
  "version": "1.0.0",
  "description": "A headless Game Boy emulator in TypeScript, built for browser & serverless",
  "license": "MIT",
  "type": "module",
  "sideEffects": false,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./browser": {
      "types": "./dist/index.browser.d.ts",
      "import": "./dist/index.browser.js",
      "default": "./dist/index.browser.js"
    }
  },
  "files": [
    "dist",
    "src",
    "!src/__tests__",
    "!src/debug.ts"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "prepublishOnly": "bun run build",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "setup:gb-test-roms": "bash scripts/setup-game-boy-test-roms.sh",
    "test:gb-test-roms": "bash scripts/run-game-boy-test-roms.sh",
    "test:gb-test-roms:all": "bun scripts/run-all-gb-test-roms-smoke.ts",
    "demo:browser": "bun run --cwd examples/vite dev",
    "demo:browser:build": "bun run --cwd examples/vite build",
    "demo:nextjs": "bun run --cwd examples/nextjs dev",
    "demo:nextjs:build": "bun run --cwd examples/nextjs build",
    "demo:screenshot": "bun examples/screenshot.ts",
    "debug": "bun src/debug.ts",
    "debug:watch": "bun src/debug.ts --watch"
  },
  "keywords": [
    "gameboy",
    "emulator",
    "dmg",
    "lr35902",
    "typescript",
    "headless",
    "serverless"
  ],
  "dependencies": {
    "bidc": "^0.0.4"
  },
  "devDependencies": {
    "@types/node": "^25.2.3",
    "bun-types": "^1.3.9",
    "typescript": "^5.9.3"
  },
  "packageManager": "pnpm@10.28.2+sha512.41872f037ad22f7348e3b1debbaf7e867cfd448f2726d9cf74c08f19507c31d2c8e7a11525b983febc2df640b5438dee6023ebb1f84ed43cc2d654d2bc326264"
}
